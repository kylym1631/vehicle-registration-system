{% for label, messages in app.flashes %}
    <div class="rounded-md p-4 {{ label == 'success' ? 'bg-green-50' : 'bg-red-50' }}">
        <div class="flex">
            <div class="flex-shrink-0">
                {% if label == 'success' %}
                    <!-- Success Icon -->
                    <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
                    </svg>
                {% else %}
                    <!-- Error Icon -->
                    <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm-2-8a2 2 0 114 0 4 4 0 10-4 0zm2 5a3.5 3.5 0 100-7 3.5 3.5 0 000 7z" clip-rule="evenodd" />
                    </svg>
                {% endif %}
            </div>
            <div class="ml-3">
                {% for message in messages %}
                    <p class="text-sm font-medium {{ label == 'success' ? 'text-green-800' : 'text-red-800' }}">{{ message }}</p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endfor %}
